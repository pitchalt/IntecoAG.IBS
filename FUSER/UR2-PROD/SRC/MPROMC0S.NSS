  IGNORE
END-SUBROUTINE
/*
DEFINE SUBROUTINE SCREEN-CHECK
  FOR CP-LINE-INDEX = 1 TO MPROMC0L-DL-LINES-MAX
     IF MPROMC0L.RM-ID(CP-LINE-INDEX) NE 0 THEN
        INCLUDE XPOBCH0C "MPROMC0L.CONF-COL(CP-LINE-INDEX)"
              "MPROMC0L.CONF-COL(CP-LINE-INDEX)"
        IF MPROMC0L.CONF-COL-C(CP-LINE-INDEX) MODIFIED THEN
           MOVE BY NAME MPROMC0L.DR-LINES(CP-LINE-INDEX) TO MERMMN0A
           MOVE "CONFIRM" TO MERMMN0A.ME-COMMAND
           PERFORM MIRMMN0S XXERX00A XXCTXX0A MERMMN0A UXCSXX0A
           IF RETURN-CODE NE 0 THEN ESCAPE BOTTOM END-IF
           MOVE BY NAME MERMMN0A TO MPROMC0L.DR-LINES(CP-LINE-INDEX)
           PERFORM LINE-ENABLE
        END-IF
     END-IF
  END-FOR
END-SUBROUTINE
/*
DEFINE SUBROUTINE SCREEN-PREPARE
  IF MX-COMMAND EQ "VIEW" THEN
     CP-CURS-FIELD := POS(MPROMC0L.DL-CMD(1))
  ELSE
     CP-CURS-FIELD := POS(MPROMC0L.DL-CMD(1))
  END-IF
