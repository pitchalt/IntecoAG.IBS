DEFINE SUBROUTINE LINE-ENABLE
  IF NOT MPROMC0L.IS-DR-CONFIRMED(CP-LINE-INDEX) THEN
     RESET MPROMC0L.CONF-COL-C(CP-LINE-INDEX)
  ELSE
     MOVE (AD=P) TO MPROMC0L.CONF-COL-C(CP-LINE-INDEX)
  END-IF
END-SUBROUTINE
/*
DEFINE SUBROUTINE LINE-DISABLE
  MOVE (AD=PN) TO MPROMC0L.CONF-COL-C(CP-LINE-INDEX)
END-SUBROUTINE
/*
DEFINE SUBROUTINE OBJECT-TO-SCREEN
  INCLUDE XPXXLS3C "MERMLS0A" "MPROMC0L"
        "MIRMMN0S" "MERMMN0A" "RM-ID" "MPROMC0L-DL-LINES-MAX"
END-SUBROUTINE
