DEFINE SUBROUTINE SCREEN-CHECK
  FOR CP-LINE-INDEX = 1 TO MPPOZC0L-DL-LINES-MAX
     IF MPPOZC0L.PZ-ID(CP-LINE-INDEX) NE 0 THEN
        RESET #IS-CONF-REQUIRED
        INCLUDE XPOBCH0C "MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX)"
              "MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX)"
        IF MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX) NE
              MPPOZC0L.IN-BS-CODE(CP-LINE-INDEX) THEN
           MOVE MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX) TO MBBSMN0A.BS-CODE
           MOVE "LOCATE" TO MBBSMN0A.BL-COMMAND
           PERFORM MBBSMN0S XXERX00A XXCTXX0A MBBSMN0A
           IF RETURN-CODE NE 0 THEN
              CP-CURS-FIELD := POS(MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX))
              ESCAPE ROUTINE
           END-IF
           MOVE TRUE TO #IS-CONF-REQUIRED
           MOVE MBBSMN0A.BS-ID TO MPPOZC0L.IN-BS-ID(CP-LINE-INDEX)
           MOVE MBBSMN0A.BS-CODE TO MPPOZC0L.IN-BS-CODE(CP-LINE-INDEX)
           MOVE MBBSMN0A.BS-CODE TO MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX)
        END-IF
        INCLUDE XPOBCH0C "MPPOZC0L.CONF-CENA-SUMMA(CP-LINE-INDEX)"
              "MPPOZC0L.CONF-CENA-SUMMA(CP-LINE-INDEX)"
        INCLUDE XPOBCH0C "MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX)"
              "MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX)"
        IF MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX) NE
              MPPOZC0L.NDS-BS-CODE(CP-LINE-INDEX) THEN
           MOVE MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX) TO MBBSMN0A.BS-CODE
           MOVE "LOCATE" TO MBBSMN0A.BL-COMMAND
           PERFORM MBBSMN0S XXERX00A XXCTXX0A MBBSMN0A
           IF RETURN-CODE NE 0 THEN
              CP-CURS-FIELD := POS(MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX))
              ESCAPE ROUTINE
           END-IF
           MOVE TRUE TO #IS-CONF-REQUIRED
           MOVE MBBSMN0A.BS-ID TO MPPOZC0L.NDS-BS-ID(CP-LINE-INDEX)
           MOVE MBBSMN0A.BS-CODE TO MPPOZC0L.NDS-BS-CODE(CP-LINE-INDEX)
           MOVE MBBSMN0A.BS-CODE TO MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX)
        END-IF
        IF MPPOZC0L.DR-NDS-SUMMA(CP-LINE-INDEX) NE 0 THEN
        INCLUDE XPOBCH0C "MPPOZC0L.CONF-NDS-SUMMA(CP-LINE-INDEX)"
              "MPPOZC0L.CONF-NDS-SUMMA(CP-LINE-INDEX)"
        END-IF
        INCLUDE XPOBCH0C "MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX)"
              "MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX)"
        IF MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX) NE
              MPPOZC0L.OUT-BS-CODE(CP-LINE-INDEX) THEN
           MOVE MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX) TO MBBSMN0A.BS-CODE
           MOVE "LOCATE" TO MBBSMN0A.BL-COMMAND
           PERFORM MBBSMN0S XXERX00A XXCTXX0A MBBSMN0A
           IF RETURN-CODE NE 0 THEN
              CP-CURS-FIELD := POS(MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX))
              ESCAPE ROUTINE
           END-IF
           MOVE TRUE TO #IS-CONF-REQUIRED
           MOVE MBBSMN0A.BS-ID TO MPPOZC0L.OUT-BS-ID(CP-LINE-INDEX)
           MOVE MBBSMN0A.BS-CODE TO MPPOZC0L.OUT-BS-CODE(CP-LINE-INDEX)
           MOVE MBBSMN0A.BS-CODE TO MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX)
        END-IF
        IF #IS-CONF-REQUIRED OR
              MPPOZC0L.CONF-COL-C(CP-LINE-INDEX) MODIFIED THEN
           MOVE BY NAME MPPOZC0L.DR-LINES(CP-LINE-INDEX) TO MEPZMN0A
           MOVE "CONFIRM" TO MEPZMN0A.ME-COMMAND
           PERFORM MIPZMN0S XXERX00A XXCTXX0A MEPZMN0A UXCSXX0A
           IF RETURN-CODE NE 0 THEN ESCAPE BOTTOM END-IF
           MOVE BY NAME MEPZMN0A TO MPPOZC0L.DR-LINES(CP-LINE-INDEX)
           PERFORM LINE-ENABLE
        END-IF
     END-IF
  END-FOR
  PERFORM LIST-RELOAD
  PERFORM OBJECT-TO-SCREEN
END-SUBROUTINE
