DEFINE SUBROUTINE LINE-ENABLE
  IF NOT MPPOZC0L.IS-DR-CONFIRMED(CP-LINE-INDEX) THEN
     RESET MPPOZC0L.CONF-COL-C(CP-LINE-INDEX)
           MPPOZC0L.IN-BS-C(CP-LINE-INDEX)
           MPPOZC0L.OUT-BS-C(CP-LINE-INDEX)
           MPPOZC0L.NDS-BS-C(CP-LINE-INDEX)
  ELSE
     MOVE (AD=P) TO MPPOZC0L.CONF-COL-C(CP-LINE-INDEX)
     MOVE (AD=P) TO MPPOZC0L.IN-BS-C(CP-LINE-INDEX)
     MOVE (AD=P) TO MPPOZC0L.OUT-BS-C(CP-LINE-INDEX)
     MOVE (AD=P) TO MPPOZC0L.NDS-BS-C(CP-LINE-INDEX)
  END-IF
  MOVE MPPOZC0L.IN-BS-CODE(CP-LINE-INDEX) TO
        MPPOZC0L.IN-BS-SEARCH(CP-LINE-INDEX)
  MOVE MPPOZC0L.OUT-BS-CODE(CP-LINE-INDEX) TO
        MPPOZC0L.OUT-BS-SEARCH(CP-LINE-INDEX)
  MOVE MPPOZC0L.NDS-BS-CODE(CP-LINE-INDEX) TO
        MPPOZC0L.NDS-BS-SEARCH(CP-LINE-INDEX)
