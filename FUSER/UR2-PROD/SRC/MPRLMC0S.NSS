DEFINE SUBROUTINE LINE-CHECK
  INCLUDE XPCSCH0C "MPRLMC0L.DL-CMD" "MPRLMC0L-DL-LINES-MAX"
  INCLUDE XPCSCH0C "MPRLMC0L.MT-CODE" "MPRLMC0L-DL-LINES-MAX"
  INCLUDE XPCSCH0C "MPRLMC0L.IS-DR-CONFIRMED" "MPRLMC0L-DL-LINES-MAX"
  INCLUDE XPCSCH0C "MPRLMC0L.CONF-COL" "MPRLMC0L-DL-LINES-MAX"
END-SUBROUTINE
/*
DEFINE SUBROUTINE LINE-ENABLE
  IF NOT MPRLMC0L.IS-DR-CONFIRMED(CP-LINE-INDEX) THEN
     RESET MPRLMC0L.CONF-COL-C(CP-LINE-INDEX)
  ELSE
     MOVE (AD=P) TO MPRLMC0L.CONF-COL-C(CP-LINE-INDEX)
  END-IF
END-SUBROUTINE
/*
DEFINE SUBROUTINE LINE-DISABLE
  MOVE (AD=PN) TO MPRLMC0L.CONF-COL-C(CP-LINE-INDEX)
END-SUBROUTINE
/*
DEFINE SUBROUTINE OBJECT-TO-SCREEN
  INCLUDE XPXXLS3C "MERLML0A" "MPRLMC0L"
        "MIRLMM0S" "MERLMM0A" "RLM-ID" "MPRLMC0L-DL-LINES-MAX"
END-SUBROUTINE
/*
DEFINE SUBROUTINE OBJECT-UPDATE
  IGNORE
END-SUBROUTINE
/*
DEFINE SUBROUTINE SCREEN-TO-OBJECT
  IGNORE
END-SUBROUTINE
/*
DEFINE SUBROUTINE SCREEN-CHECK
  FOR CP-LINE-INDEX = 1 TO MPRLMC0L-DL-LINES-MAX
     IF MPRLMC0L.RLM-ID(CP-LINE-INDEX) NE 0 THEN
        INCLUDE XPOBCH0C "MPRLMC0L.CONF-COL(CP-LINE-INDEX)"
              "MPRLMC0L.CONF-COL(CP-LINE-INDEX)"
        IF MPRLMC0L.CONF-COL-C(CP-LINE-INDEX) MODIFIED THEN
           MOVE BY NAME MPRLMC0L.DR-LINES(CP-LINE-INDEX) TO MERLMM0A
           MOVE "CONFIRM" TO MERLMM0A.ME-COMMAND
           PERFORM MIRLMM0S XXERX00A XXCTXX0A MERLMM0A UXCSXX0A
           IF RETURN-CODE NE 0 THEN ESCAPE BOTTOM END-IF
           MOVE BY NAME MERLMM0A TO MPRLMC0L.DR-LINES(CP-LINE-INDEX)
           PERFORM LINE-ENABLE
        END-IF
     END-IF
  END-FOR
END-SUBROUTINE
/*
DEFINE SUBROUTINE SCREEN-PREPARE
  IF MX-COMMAND EQ "VIEW" THEN
     CP-CURS-FIELD := POS(MPRLMC0L.DL-CMD(1))
  ELSE
     CP-CURS-FIELD := POS(MPRLMC0L.DL-CMD(1))
  END-IF
END-SUBROUTINE
