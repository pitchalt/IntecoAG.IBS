/*INCLUDE MPXXLS2C "MMRMMN0S" "MErlhm0A" "MPRlMC0L.RlM-ID"
/*
DEFINE SUBROUTINE LINE-CALL
  RESET MERXMM0A
  MOVE 1701 TO MERXMM0A.RXH-DD-ID
  MOVE 1702 TO MERXMM0A.RXM-DD-ID
  MOVE 1703 TO MERXMM0A.RXP-DD-ID
  MOVE MERLHM0A.RL-ID TO MERXMM0A.RXH-ID
  MOVE MERLHM0A.IN-MO-ID TO MERXMM0A.IN-MO-ID
  MOVE MERLHM0A.OUT-MO-ID TO MERXMM0A.OUT-MO-ID
  MOVE MERLHM0A.ZK-ID TO MERXMM0A.ZK-ID
/*  MOVE MPRLML0L.RXM-ID(CP-LINE-CURRENT) TO XMBMXX1A.BM-OBJECT
  IF CP-LINE-CURRENT NE 0 THEN
     MOVE MPRLMC0L.RLM-ID(CP-LINE-CURRENT) TO MERXMM0A.RXM-ID
  END-IF
  PERFORM MMRXMM0S XXERX00A XXCTXX0A XMBMXX1A MERXMM0A UXCSXX0A
  IF RETURN-CODE NE 0 THEN ESCAPE ROUTINE END-IF
END-SUBROUTINE
/*
DEFINE SUBROUTINE LINE-VIEW
  IF CP-LINE-CURRENT NE 0 THEN
/*     WRITE CP-LINE-CURRENT MPRLML0L.RXM-ID(CP-LINE-CURRENT)
     MOVE MPRLMC0L.RLM-ID(CP-LINE-CURRENT) TO XMBMXX1A.BM-OBJECT
/*     XMBMXX1A.BM-OBJECT  := &3&(CP-LINE-CURRENT)
     XMBMXX1A.BM-COMMAND := "VIEW"
     PERFORM LINE-CALL
/*     PERFORM &1& XXERX00A XXCTXX0A XMBMXX1A &2& UXCSXX0A
  END-IF
END-SUBROUTINE
